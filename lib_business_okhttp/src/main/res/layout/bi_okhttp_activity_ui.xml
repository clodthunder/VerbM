<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <include
      layout="@layout/bc_ui_tb_back"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0"
      />
  <ScrollView
      android:id="@+id/bi_okhttp_sv_ui"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tl_home_bar"
      app:layout_constraintVertical_bias="0"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/bc_ui_white_splite_inset"
        android:orientation="vertical"
        android:showDividers="middle"
        >
      <!-- GET 部分 -->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="@color/bi_okhttp_label_bg"
          android:orientation="vertical"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bi_okhttp_tv_label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/bc_ui_space_10"
            android:text="GET"
            android:textColor="@color/bc_ui_color_white"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bi_okhttp_iv_1"
            android:layout_width="@dimen/bc_ui_arrow_down_width"
            android:layout_height="@dimen/bc_ui_arrow_down_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bc_ui_space_10"
            android:src="@drawable/bc_ui_comm_white_down"
            />
      </RelativeLayout>

      <LinearLayout
          android:id="@+id/bi_okhttp_container_1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="200dp"
          android:orientation="vertical"
          android:visibility="gone"
          >

      </LinearLayout>

      <!-- POST 部分 -->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="@color/bi_okhttp_label_bg"
          android:orientation="vertical"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bi_okhttp_tv_label_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/bc_ui_space_10"
            android:text="POST"
            android:textColor="@color/bc_ui_color_white"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bi_okhttp_iv_2"
            android:layout_width="@dimen/bc_ui_arrow_down_width"
            android:layout_height="@dimen/bc_ui_arrow_down_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bc_ui_space_10"
            android:src="@drawable/bc_ui_comm_white_down"
            />
      </RelativeLayout>
      <LinearLayout
          android:id="@+id/bi_okhttp_container_2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="200dp"
          android:orientation="vertical"
          android:visibility="visible"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_login_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="response:"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login with ret json"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_okjson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login with ok json"
            />

      </LinearLayout>
      <!-- POST 部分 -->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="@color/bi_okhttp_label_bg"
          android:orientation="vertical"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bi_okhttp_tv_label_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/bc_ui_space_10"
            android:text="Upload File With Progress"
            android:textColor="@color/bc_ui_color_white"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bi_okhttp_iv_3"
            android:layout_width="@dimen/bc_ui_arrow_down_width"
            android:layout_height="@dimen/bc_ui_arrow_down_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bc_ui_space_10"
            android:src="@drawable/bc_ui_comm_white_down"
            />
      </RelativeLayout>
      <LinearLayout
          android:id="@+id/bi_okhttp_container_3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="200dp"
          android:orientation="vertical"
          android:visibility="gone"
          >

      </LinearLayout>
      <!-- 批量上传文件 -->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="@color/bi_okhttp_label_bg"
          android:orientation="vertical"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bi_okhttp_tv_label_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/bc_ui_space_10"
            android:text="Upload File In Batches"
            android:textColor="@color/bc_ui_color_white"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bi_okhttp_iv_4"
            android:layout_width="@dimen/bc_ui_arrow_down_width"
            android:layout_height="@dimen/bc_ui_arrow_down_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bc_ui_space_10"
            android:src="@drawable/bc_ui_comm_white_down"
            />
      </RelativeLayout>
      <LinearLayout
          android:id="@+id/bi_okhttp_container_4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="200dp"
          android:orientation="vertical"
          android:visibility="gone"
          >

      </LinearLayout>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="@color/bi_okhttp_label_bg"
          android:orientation="vertical"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bi_okhttp_tv_label_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/bc_ui_space_10"
            android:text="Download File With Progress"
            android:textColor="@color/bc_ui_color_white"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bi_okhttp_iv_5"
            android:layout_width="@dimen/bc_ui_arrow_down_width"
            android:layout_height="@dimen/bc_ui_arrow_down_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bc_ui_space_10"
            android:src="@drawable/bc_ui_comm_white_down"
            />
      </RelativeLayout>
      <LinearLayout
          android:id="@+id/bi_okhttp_container_5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="200dp"
          android:orientation="vertical"
          android:visibility="gone"
          >

      </LinearLayout>
      <!--   批量下载文件-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="@color/bi_okhttp_label_bg"
          android:orientation="vertical"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bi_okhttp_tv_label_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/bc_ui_space_10"
            android:text="Download File In Batches With Progress"
            android:textColor="@color/bc_ui_color_white"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bi_okhttp_iv_6"
            android:layout_width="@dimen/bc_ui_arrow_down_width"
            android:layout_height="@dimen/bc_ui_arrow_down_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bc_ui_space_10"
            android:src="@drawable/bc_ui_comm_white_down"
            />
      </RelativeLayout>
      <LinearLayout
          android:id="@+id/bi_okhttp_container_6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="200dp"
          android:orientation="vertical"
          android:visibility="gone"
          >

      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>