<resources>

    <!-- Base application theme. -->
    <style name="hk_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hk_colorPrimary</item>
        <item name="colorPrimaryDark">@color/hk_colorPrimaryDark</item>
        <item name="colorAccent">@color/hk_colorAccent</item>
    </style>

    <style name="hk_AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="hk_AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="hk_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
