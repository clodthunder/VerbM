<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="base64"
            />
        <!--normal-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_base64_test"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            />
        <!--  svg-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remote svg"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_remote_svg_test"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@color/bc_ui_color_black"
            />
        <!--  raw svg-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="raw svg"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_raw_svg_test"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@color/bc_ui_color_black"
            />
        <!--  xml svg-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" xml svg"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_xml_svg_test"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@color/bc_ui_color_black"
            />
        <!--  assets svg-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" assets svg"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_assets_svg_test"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@color/bc_ui_color_black"
            />
      </LinearLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <!--net error gif-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="net error gif"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_error_gif_test"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            />

        <!--net default gif-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="net default gif"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_default_gif_test"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            />
        <!--remote  gif-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remote gif"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_remote_gif_test"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            />

        <!--lcoal  gif-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="local gif"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_local_gif_test"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            />
      </LinearLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
      <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/iv_big_error"
          android:layout_width="300dp"
          android:layout_height="300dp"
          />
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/test_ui_image01"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_error_circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_round"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_error_round"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_round_four"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_error_round_four"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
      </LinearLayout>
    </HorizontalScrollView>
    <com.lskj.gx.lib_widget.textview.GxRoundImgView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/test_ui_image01"
        app:lb_radius="20dp"
        app:lt_radius="10dp"
        app:rb_radius="20dp"
        app:rt_radius="20dp"
        />

    <com.cbman.roundimageview.RoundImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:bottomLeftRadius="30dp"
        android:bottomRightRadius="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/test_ui_image01"
        android:topLeftRadius="10dp"
        android:topRightRadius="15dp"
        app:borderColor="#000"
        app:borderWidth="3dp"
        app:displayBorder="true"
        app:displayType="round_rect"
        />

  </LinearLayout>
</ScrollView>